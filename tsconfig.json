{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "rootDir": "src",
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./src/",
    "paths": {
      "@node-ts-hexagonal/*": ["./*"]
    }
  },
  "include": [
    "src/**/**.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/tests/**.ts",
    "dist"
  ]
}
